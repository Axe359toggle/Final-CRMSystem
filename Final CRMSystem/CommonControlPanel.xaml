<UserControl x:Class="Final_CRMSystem.CommonControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Final_CRMSystem"
             mc:Ignorable="d" 
             d:DesignHeight="52" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="52"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Width="52" Height="52" Background="Transparent">
            <DockPanel>
                <Image Width="30" Height="30" Source="/Resources/icons8_Home_100px.png "/>
            </DockPanel>
        </Button>
        <Button Grid.Column="3" Width="52" Height="52" Background="Transparent">
            <DockPanel>
                <Image Width="30" Height="30" Source="/Resources/icons8_Logout_Rounded_Up_96px.png "/>
            </DockPanel>
        </Button>
    </Grid>
</UserControl>
